.i-sticky-item-header {
    position: relative;
    /* background: #eee; */
    font-size: 14px;
    width: 100%;
    min-height: 60px;
    line-height: 32px;
}

.i-sticky-item-content {
    font-size: 14px;
    z-index: 1;
}

.i-sticky-title {
    width: 100%;
    padding: 0 15px;
    box-sizing: border-box;
    /* background: #eee; */
    border-style: solid;
    border-width: 1px 0;
    border-color: rgb(196, 203, 207);
}

.i-sticky-fixed .i-sticky-title {
    position: fixed;
    top: 0;
    z-index: 10;
    border: 0;
    background-color: #eee;
}