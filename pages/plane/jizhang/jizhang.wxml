<view class="container">
  <view class="section">
    <input placeholder="记账..." bindinput="inputContent" auto-focus />
  </view>
  <view class="tags" wx:if="{{ tags.length }}">
    <view class="tag" wx:for="{{ tags }}" wx:key="index">
      <text class="txt">{{ item }}</text>
      <icon class="remove" type="clear" size="16" data-index="{{ index }}" bindtap="removeTag"/>
    </view>
  </view>
  <view class="section">
    <input placeholder="添加..." value="{{ tag }}" bindconfirm="addTag" wx:if="{{ tags.length < 3 }}"/>
    <input value="最多添加三个" disabled wx:if="{{ tags.length >= 3 }}"/>
  </view>
  <view class="section">
    <text>备注：</text>
    <textarea bindinput="inputExtra" auto-height="true" />
  </view>
  <button type="primary" bindtap="create"> 创 建 </button>
</view>