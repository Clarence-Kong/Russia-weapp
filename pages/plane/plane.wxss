.top {
    display: flex;
    flex-direction: column;
}

.wrapper {
    width: 100%;
    height: max-content;
    position: relative;
}

.text {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    color: aliceblue;
}

.down {
    font-size: 12px;
}

.down::before {
    content: "== "
}

.down::after {
    content: " =="
}

image {
    filter: blur(1.5px);
    width: 750rpx;
    z-index: 0;
}

.button {
    position: absolute;
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #47484c;
    bottom: 5px;
    color: aliceblue;
}

.bon {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 187.5rpx;
    height: 80rpx;
    border-right: 1px solid #5e616d;
    font-size: 12px
}

.bottom {
    position: relative;
    background-color: rgba(226, 225, 228, 0);
}



.outTitle {
    display: flex;
    flex-direction: column;


}

.title {
    display: flex;
    font-size: 15px;
    font-weight: bolder;
    color: rgba(127, 236, 194, 0.925);
    align-items: center;
    line-height: 50rpx;
    margin: 20rpx 0;
}


.time {
    display: flex;
    flex-direction: column;
    line-height: 54rpx;
    text-align: center;
}

.day {
    font-size: 22px;
}


.inner {
    background-color: #fff;
}

.tit-pot {
    position: relative;
    display: block;
    width: 30rpx;
    height: 30rpx;
    background-color: rgba(127, 236, 194, 0.925);
    border-radius: 50%;
    margin-right: 15rpx;
}

.line {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: -10;
    top: 35rpx;
    width: 7rpx;
    height: 70vh;
    background-color: rgba(185, 157, 157, 0.5);
}



.i-icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
}

.pot {
    position: relative;
    margin-left: 7rpx;
    z-index: 1;
    width: 45rpx;
    height: 45rpx;
    background-color: rgb(248, 234, 172);
    border-radius: 50%;
}

.innerPot {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    z-index: 2;
    width: 35rpx;
    height: 35rpx;
    align-items: center;
    background-color: rgb(120, 10, 245);
    border-radius: 50%;
    line-height: 12rpx;
}

.outerContent {
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin: 40rpx 0;
}

.content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 94vw;
    background-color: #fff;
    /* box-shadow:1px 1px 1px #47484c; */
    border: 1px solid rgb(204, 204, 214);
    border-radius: 15rpx;
}

.right {
    width: 80vw;
    display: flex;
    flex-direction: column;
}

.traffic {
    padding: 15rpx 0;
    margin-right: 40rpx;
    border-bottom: 1px solid rgb(196, 203, 207);
    color: rgb(12, 154, 248)
}

.road {
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    justify-content: space-evenly;
    margin: 20rpx 0;
}

.place {
    font-weight: 550;
    font-size: 22px;
}

.point {
    font-size: 16px;
}

.goTime {
    font-size: 12px;
    color: blue;
}